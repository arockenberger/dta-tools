<TEI xmlns="http://www.tei-c.org/ns/1.0">
	<text>
		<body>

			<spGrp>           
				<sp who="#WAL" xml:id="simspeech1a">             
					<speaker><hi rendition="#g">S1</hi>:</speaker>             
					<p>test1</p>
				</sp><lb/>
				<sp who="#ALB" xml:id="simspeech1b">
					<speaker><hi rendition="#g">S2</hi>:</speaker>
					<p>test2</p>
				</sp>
				<stage rendition="#leftBraced" corresp="#simspeech1a #simspeech1b">(gleichzeitig.)</stage>
			</spGrp>
			<lb/>
			<spGrp>
				<stage rendition="#rightBraced">
					<p rendition="#v">(Sprechen gleichzeitig.)</p>
				</stage>
				<sp who="#WEH">
					<speaker>S1.</speaker>
					<p>test1</p>
					<stage>(to S2).</stage> 
					<p>test2</p><lb/>
				</sp>
				<sp who="#KRUE">
					<speaker>S2</speaker>
					<stage>(to S3).</stage>
					<p>test3</p><lb/>
				</sp>
				<sp who="#FLE">
					<speaker>S3.</speaker>
					<stage>(to S1).</stage>
					<p>test4</p><lb/>
				</sp>				
			</spGrp>
			<lb/>
		</body>
	</text>
</TEI>
